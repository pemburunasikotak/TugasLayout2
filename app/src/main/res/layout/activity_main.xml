<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        android:background="#919E44"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="Masukkan Pesan Disini"
            android:inputType="textPersonName"
            android:textStyle="italic" />
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Send" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:textAlignment="gravity"
            android:text="Udah Tau, pasti Chat kalo lagi gabut"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignBottom="@id/textView2"
            android:layout_alignParentBottom="false"
            android:layout_toLeftOf="@id/textView2"
            android:padding="10dp"
            android:src="@drawable/fauzan" />

        <TextView
            android:id="@+id/textView3"
            android:layout_above="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:padding="10dp"
            android:text="GPP, Lagi Gabut aja"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@id/imageView4"
            android:layout_toRightOf="@+id/textView3"
            android:padding="10dp"
            android:src="@drawable/tiara" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageView5"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:textStyle="italic"
            android:text="Di Kampus Kenapa?"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignBottom="@id/textView5"
            android:layout_toLeftOf="@id/textView5"
            android:padding="10dp"
            android:src="@drawable/fauzan" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView6"
            android:background="#4CAF50"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Lo Lagi Dimana"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@id/imageView6"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/textView6"
            android:padding="10dp"
            android:src="@drawable/tiara" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:text="Apa Cok"
            android:fontFamily="cursive"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@+id/imageView"
            android:layout_toLeftOf="@id/textView7"
            android:padding="10dp"
            android:src="@drawable/fauzan" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:padding="10dp"
            android:layout_above="@+id/imageView9"
            android:text="PPPPPPPPPPPP"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@+id/imageView9"
            android:layout_toRightOf="@+id/textView8"
            android:padding="10dp"
            android:src="@drawable/tiara" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#350A0A"
            android:padding="10dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="TJ PUNYA"
            android:textAlignment="center">

        </TextView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


